# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
# Change $SCRIPT_DIR to the location of your scripts!
command=/etc/xdg/i3blocks/blocks/$BLOCK_NAME/$BLOCK_NAME
separator_block_width=15
markup=none

[sway-focusedwindow]
interval=persist

[timer_and_stopwatch]
# the DEFAULT_MODE variable must be either timer or stopwatch
format=json
interval=1
TIMER_LABEL=⌛
STOPWATCH_LABEL=⏰
DEFAULT_MODE=stopwatch
#DEFAULT_STOPWATCH=0
#DEFAULT_TIMER=60
PLAY_LABEL=⏸
PAUSE_LABEL=▶
TIMER_LOOP=true

[brightness]
command=bash /etc/xdg/i3blocks/brightness
label=💡
interval=once
#STEP=100
#MIN=100
INTERFACE=intel_backlight


[docker]
color=#0db7ed
interval=10
LABEL=🐳

# Volume indicator
#
# The first parameter sets the step (and units to display)
# The second parameter overrides the mixer selection
# See the script for details.

[volume]
label=♪
#label=VOL
interval=once
signal=10
#LSTEP=5%

# Memory usage
#
# The type defaults to "mem" if the instance is not specified.
[memory]
label=🐏
separator=false
interval=30

[memory]
label=🐕
instance=swap
separator=false
interval=30

# Network interface monitoring
#
# If the instance is not specified, use the interface used for default route.
# The address can be forced to IPv4 or IPv6 with -4 or -6 switches.
[iface]
IFACE=esp4s0
color=#00FF00
interval=10
separator=false

[load_average]
label=🐃
interval=10
separator=false

[cpu_usage]
interval=10
LABEL=🐀
min_width=🐀100.00%
#T_WARN=50
#T_CRIT=80
#DECIMALS=2

[networkmanager]
full_text=🌐
command=networkmanager_dmenu
separator=false

[wifi]
INTERFACE=wlp3s0
interval=10

# Battery indicator
#
# The battery instance defaults to 0.
[battery]
label=⚡
interval=30
instance=1

[xkb_layout]
label=🏳
font=monospace
font_weight=bold
interval=persist
markup=pango

# Date Time
#
[time]
command=date '+%Y-%m-%d %H:%M:%S'
interval=5

[shutdown_menu]
full_text=⏼
color=#eb4034
